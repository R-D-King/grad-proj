{
  "version": "1.0",
  "description": "Configuration for automated relay control based on sensor readings",
  "rules": [
    {
      "name": "Water Pump Control",
      "relay": {
        "pin": 17,
        "name": "Water Pump Relay"
      },
      "conditions": [
        {
          "sensor": "soil_moisture",
          "operator": "less_than",
          "value": 30.0,
          "unit": "%"
        },
        {
          "sensor": "water_level",
          "operator": "greater_than",
          "value": 20.0,
          "unit": "%"
        }
      ],
      "condition_logic": "AND",
      "actions": {
        "turn_on": true,
        "duration": 300,
        "cooldown_period": 3600
      }
    },
    {
      "name": "Fan Control",
      "relay": {
        "pin": 18,
        "name": "Fan Relay"
      },
      "conditions": [
        {
          "sensor": "temperature",
          "operator": "greater_than",
          "value": 28.0,
          "unit": "Â°C"
        }
      ],
      "condition_logic": "AND",
      "actions": {
        "turn_on": true,
        "duration": 0,
        "cooldown_period": 300
      }
    },
    {
      "name": "Light Control",
      "relay": {
        "pin": 19,
        "name": "Light Relay"
      },
      "conditions": [
        {
          "sensor": "light",
          "operator": "less_than",
          "value": 20.0,
          "unit": "%"
        }
      ],
      "condition_logic": "AND",
      "actions": {
        "turn_on": true,
        "duration": 0,
        "cooldown_period": 0
      }
    }
  ],
  "global_settings": {
    "check_interval": 60,
    "simulation_mode": true,
    "logging_level": "INFO"
  }
}